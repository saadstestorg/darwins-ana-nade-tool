		Create Effect(All Players(All Teams), Sphere, Green, Add(Player Variable(Event Player, P), Vector(0, 0.500, 0)), 0.200,
			Visible To Position and Radius);
		Set Player Variable(Event Player, F, Last Created Entity);
	}
}

